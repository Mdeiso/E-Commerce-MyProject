<h1>Listing products</h1>

<style type = "text/css">
	.title{
		font-size: 24pt;
		font-weight: bold;
		margin-bottom:16px;
	}
	.title a, a:hover{
		color:maroon;
	}
	.dedcription{
		margin-bottom: 16px;
	}
	.price{
		color:maroon;
		font-weight:800;
		font-size:14pt;
		text-align: right;
	    
	}
	
</style>

<table>

<% @products.each do |product| %>
  <tr>
  	<td><%= link_to image_tag(product.image_url), product %></td>
	<td>
    <div class ="tilte"><%= link_to product.title, product %></div>
    <div class ="description"><%= product.description %></div>
    <div><%= link_to 'Show', product %> | <%= link_to 'Edit', edit_product_path(product) %> | <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></div>
	<div class ="price"><%=   product.price  %></div>
	</td>
	</div>
  </tr>
  <tr>
  	<td td colspan = "2">
  		<hr/>
  	</td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Product', new_product_path %>
